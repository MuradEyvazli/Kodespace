# Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production

# ======================
# APPLICATION SETTINGS (Required)
# ======================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# ======================
# DATABASE (Required)
# ======================
# MongoDB connection string
# Development: mongodb://localhost:27017/kodespace
# Production: mongodb://user:password@host:port/database
MONGODB_URI=mongodb://localhost:27017/kodespace

# ======================
# AUTHENTICATION (Required)
# ======================
# NextAuth.js configuration
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secure-secret-at-least-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# ======================
# CACHING (Optional)
# ======================
# Redis for production caching
# Development: Leave empty to use in-memory cache
# Production: redis://username:password@host:port
REDIS_URL=

# ======================
# EMAIL PROVIDER (Optional)
# ======================
# Email service for notifications and password resets
EMAIL_PROVIDER=resend

# Resend API Configuration
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@your-domain.com

# Alternative: AWS SES Configuration
# EMAIL_PROVIDER=ses
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# ======================
# MONITORING (Optional)
# ======================
# Sentry for error tracking and performance monitoring
SENTRY_DSN=your-sentry-dsn-url

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# ======================
# SECURITY & FEATURES
# ======================
# JWT secret for API tokens
JWT_SECRET=your-jwt-secret-for-api-authentication

# File upload limits
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature flags
FEATURE_COMMENTS=true
FEATURE_CODE_EXECUTION=false
FEATURE_LIVE_COLLABORATION=false

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
LOG_FORMAT=json

# ======================
# DEVELOPMENT ONLY
# ======================
# Enable detailed logging in development
DEBUG=kodespace:*

# Bundle analyzer
ANALYZE=false