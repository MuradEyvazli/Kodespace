# Production Environment Variables Example
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
PORT=3000

# Database
MONGODB_URI=mongodb://kodespace:kodespace123@mongodb:27017/kodespace?authSource=kodespace
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-root-password
MONGO_DATABASE=kodespace
MONGO_APP_USERNAME=kodespace
MONGO_APP_PASSWORD=your-secure-app-password

# Redis (for caching in production)
REDIS_URL=redis://:your-redis-password@redis:6379
REDIS_PASSWORD=your-secure-redis-password

# Authentication
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-min-32-chars
NEXTAUTH_URL=https://your-domain.com

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service (optional)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@your-domain.com

# File Upload (optional)
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Security
JWT_SECRET=your-jwt-secret-for-api-tokens
ENCRYPTION_KEY=your-32-character-encryption-key

# Monitoring & Analytics (optional)
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Feature Flags
FEATURE_COMMENTS=true
FEATURE_CODE_EXECUTION=false
FEATURE_LIVE_COLLABORATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# SSL/TLS (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem